{% extends "views/layouts/index.njk" %}

{% block body %}
  <p class="ml-1 is-size-5">Number of cars: {{cars.length}}</p>
  <div class="table-container mt-1" style="max-height: 85vh; overflow-y: auto;">
    <table class="table is-bordered is-size-5 is-striped has-text-centered is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>Brand</th>
          <th>Model</th>
          <th>Year</th>
          <th>
            <abbr title="Mileage in kms">Kms</abbr>
          </th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for car in cars %}
          <tr>
            <td>{{car.brand}}</td>
            <td>{{car.model}}</td>
            <td>{{car.manufactureYear}}</td>
            <td>{{car.kilometerMileage}}</td>
            <td>
              <div class="buttons is-centered is-flex-wrap-nowrap">
                <a class="button is-rounded is-info is-outlined" href={{'/car/view/' + car.id}}>View</a>
                <a class="button is-rounded is-link is-outlined" href={{'/car/edit/' + car.id}}>Edit</a>
                <a class="button is-rounded is-danger is-outlined" href={{'/car/delete/' + car.id}}>Delete</a>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  {% if cars.length === 0 %}
    <div class="has-text-centered mt-5">
      <a class="button is-info is-outlined is-rounded" href="/car/create">Add a new car</a>
    </div>
  {% endif %}
{% endblock %}
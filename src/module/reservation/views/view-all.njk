{% extends "views/layouts/index.njk" %}

{% block body %}
  <div class="table-container mt-1" style="max-height: 85vh; overflow-y: auto;">
    <table class="table is-bordered is-size-5 is-striped has-text-centered is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>ID</th>
          <th>Customer</th>
          <th>Car</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for reservation in reservations %}
          <tr>
            <td>#{{reservation.id}}</td>
            <td>
              {{reservation.customer.name}}
              {{reservation.customer.surname}}
            </td>
            <td>
              {{reservation.car.brand}}
              {{reservation.car.model}}
              {{reservation.car.manufactureYear}}
            </td>
            <td>
              <div class="buttons is-centered is-flex-wrap-nowrap">
                <a class="button is-rounded is-info is-outlined" href={{'/reservation/view/' + reservation.id}}>View</a>
                <a class="button is-rounded is-link is-outlined" href={{'/reservation/edit/' + reservation.id}}>Edit</a>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  {% if reservations.length === 0 %}
    <div class="has-text-centered mt-5">
      <a class="button is-info is-outlined is-rounded" href="/reservation/create">Add a new reservation</a>
    </div>
  {% endif %}
{% endblock %}